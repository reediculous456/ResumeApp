<!-- Signup Section -->
<section class="masthead">
  <div class="container d-flex h-100 align-items-center">
    <div class="mx-auto text-center">

      <p style="color: white; font-size: 4rem;">Upload your resume here!</p>

      <div>

        <div class="form-group">
          <input type="text" class="form-control" ng-model="applicant.fName" placeholder="Enter first name"
            required><br />
          <input type="text" class="form-control" ng-model="applicant.lName" placeholder="Enter last name"
            required><br />
          <input type="email" class="form-control" ng-model="applicant.email" placeholder="Enter email address"
            required><br />
          <select ng-model="applicant.position_id" class="form-control" required>
            <option selected disabled value="">Choose a Position</option>
            <option ng-repeat="position in positions" value="{{position.id}}">{{position.name}}</option>
          </select>
        </div>

        <div class="form-group">
          <div class="custom-file">
            <input ref="file" class="custom-file-input" type="file" accept=".rtf,.txt,.pdf,.docx,.doc"
              file-model="resumeFile" required>
            <label class="custom-file-label">
              {{ resumeFile ?  resumeFile.name : "Upload a Resume File" }}
            </label>
          </div>
        </div>

        <button ng-click="submit()" class="btn btn-primary mx-auto">
          Submit
        </button>
      </div>

    </div>
  </div>
</section>